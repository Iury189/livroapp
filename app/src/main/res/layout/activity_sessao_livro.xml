<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.SessaoLivro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_add_livro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#397939"
            android:layout_margin="5dp"
            android:contentDescription="Ir para página cadastrar livro."
            android:text="Cadastrar livro"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_list_livros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#171688"
            android:layout_margin="5dp"
            android:contentDescription="Ir para página de listagem de livros."
            android:text="Listar livros"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>